<ehcache>
	<diskStore path="java.io.tmpdir" />

	<defaultCache 
	       maxElementsInMemory="1000" 
	       eternal="false"
		   timeToIdleSeconds="300" 
		   timeToLiveSeconds="300"
		   overflowToDisk="true" 
    />
    
	<cache 
	      name="DEFAULT_CACHE" 
	      maxElementsInMemory="10000"
		  eternal="false" 
		  timeToIdleSeconds="300"
		  timeToLiveSeconds="300"
		  overflowToDisk="true" 
    />

	<cache 
	      name="SHORT_CACHE" 
	      maxElementsInMemory="10000"
		  eternal="false" 
		  timeToIdleSeconds="300"
		  timeToLiveSeconds="300"
		  overflowToDisk="true" 
    />		
</ehcache>
